  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch server",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/packages/server/src/index.ts",
      "args": [
        "-p",
        "2345",
        "-k",
        "localhost:3501",
        "-s",
        "localhost:3502",
      ],
      "outFiles": [
        "${workspaceFolder}/**/*"
      ],
      "console": "integratedTerminal"
    },
  ]
}